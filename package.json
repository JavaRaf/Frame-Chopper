{
  "name": "frame-chopper",
  "version": "1.4.0",
  "main": "src/scripts/main/Main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.framechopper.app",
    "productName": "Frame Chopper",
    "compression": "maximum",
    "asar": true,
    "electronLanguages": [
      "en-US"
    ],
    "publish": null,
    "files": [
      "src/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/test/**",
      "!**/tests/**",
      "!**/docs/**",
      "!**/examples/**",
      "!**/.vscode/**",
      "!**/node_modules/*/{test,tests,doc,docs,example,examples}/**",
      "!**/settings.json"
    ],
    "fileAssociations": [
      {
        "ext": [
          "mp4",
          "mkv",
          "avi",
          "mov",
          "wmv",
          "flv",
          "webm",
          "m4v",
          "mpg",
          "mpeg",
          "3gp",
          "ogv",
          "ts",
          "vob",
          "rm",
          "rmvb",
          "f4v"
        ],
        "name": "Vídeo file",
        "role": "Viewer"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "fileAssociations": [
        {
          "ext": "mp4",
          "name": "Vídeo file",
          "role": "Viewer"
        },
