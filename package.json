{
  "name": "frame-chopper",
  "version": "1.2.0",
  "main": "src/scripts/main/Main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.seuapp.id",
    "productName": "Frame Chopper", 
    "extraResources": [
      {
        "from": "src/tools/ffmpeg.7z", 
        "to": "./",      
        "filter": ["**/*"]   
      }
    ],
    "files": [
      "dist/**/*",
      "src/**/*",
      "!dist/**/node_modules/*", 
      "!**/node_modules/*/{docs,example,test}/**",
      "!**/*.md",
      "!**/*.map"
    ],
    "fileAssociations": [
      {
        "ext": [
          "mp4",
          "mkv",
          "avi",
          "mov",
          "wmv",
          "flv",
          "webm",
          "m4v",
          "mpg",
          "mpeg",
          "3gp",
          "ogv",
          "ts",
          "vob",
          "rm",
          "rmvb",
          "f4v"
        ],
        "name": "VÃ­deo file",
        "role": "Viewer"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "src/images/icon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "App to cut frames from videos",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "node-7z": "^3.0.0"
  }
}
