{
  "name": "frame-chopper",
  "version": "1.3.1",
  "main": "src/scripts/main/Main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.framechopper.app",
    "productName": "Frame Chopper", 
    "compression": "maximum",
    "asar": true,
    "electronLanguages": ["en-US"],
    "publish": null,
    "files": [
      "src/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/test/**",
      "!**/tests/**",
      "!**/docs/**",
      "!**/examples/**",
      "!**/.vscode/**",
      "!**/node_modules/*/{test,tests,doc,docs,example,examples}/**"
    ],
    "fileAssociations": [
      {
        "ext": [
          "mp4",
          "mkv",
          "avi",
          "mov",
          "wmv",
          "flv",
          "webm",
          "m4v",
          "mpg",
          "mpeg",
          "3gp",
          "ogv",
          "ts",
          "vob",
          "rm",
          "rmvb",
          "f4v"
        ],
        "name": "VÃ­deo file",
        "role": "Viewer"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis",
      "icon": "src/images/icon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "App to cut frames from videos",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8"
  }
}
